set terminal png large
set output "occ_plot_abs.png"
set grid
set title "Sum of words by occurence"
set style fill solid border -1
set boxwidth 0.1
set key opaque
set xlabel "rank"
set ylabel "absolute occurence"
plot "acres_occ" using 1:2 with linespoint lt 1 lw 1 title "word-occ-acres", "lili_occ" using 1:2 with linespoint lt 2 lw 1 title "word-occ-liliom", "jeder_occ" using 1:2 with linespoint lt 3 lw 1 title "word-occ-jeder", "geschw_occ" using 1:2 with linespoint lt 4 lw 1 title "word-occ-geschw", 
set output "occ_plot_rel.png"
set ylabel "rel. occurence"
plot "acres" using 1:3 with linespoint lt 1 lw 1 title "acres", "lili" using 1:3 with linespoint lt 2 lw 1 title "liliom", "jeder" using 1:3 with linespoint lt 3 lw 1 title "jedermann", "geschw" using 1:3 with linespoint lt 4 lw 1 title "geschwister", 
set ylabel "log(occurence)"
set logscale y
set output "occ_plot_abs_log.png"
plot "acres_occ" using 1:2 with linespoint lt 1 lw 1 title "word-occ-acres", "lili_occ" using 1:2 with linespoint lt 2 lw 1 title "word-occ-liliom", "jeder_occ" using 1:2 with linespoint lt 3 lw 1 title "word-occ-jeder", "geschw_occ" using 1:2 with linespoint lt 4 lw 1 title "word-occ-geschw", 
set ylabel "log(rel. occurence)"
set output "occ_plot_rel_log.png"
plot "acres" using 1:3 with linespoint lt 1 lw 1 title "acres", "lili" using 1:3 with linespoint lt 2 lw 1 title "liliom", "jeder" using 1:3 with linespoint lt 3 lw 1 title "jedermann", "geschw" using 1:3 with linespoint lt 4 lw 1 title "geschwister", 
