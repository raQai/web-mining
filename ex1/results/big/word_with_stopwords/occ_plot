set terminal png large
set grid
set title "Häufigkeit von Wörtern sortiert nach iher Häufigkeit (inkl. Stop-Wörter)"
set style fill solid border -1
set boxwidth 0.1
set key opaque

set output "occ_plot_abs.png"
set xlabel "Rang"
set ylabel "absolute Häufigkeit"
plot "acres_occ" using 1:2 with linespoint lt 1 lw 1 title "acres", "lili_occ" using 1:2 with linespoint lt 2 lw 1 title "liliom", "jeder_occ" using 1:2 with linespoint lt 3 lw 1 title "jeder", "geschw_occ" using 1:2 with linespoint lt 4 lw 1 title "geschw", 

set output "occ_plot_rel.png"
set ylabel "relative Häufigkeit"
plot "acres" using 1:3 with linespoint lt 1 lw 1 title "acres", "lili" using 1:3 with linespoint lt 2 lw 1 title "liliom", "jeder" using 1:3 with linespoint lt 3 lw 1 title "jedermann", "geschw" using 1:3 with linespoint lt 4 lw 1 title "geschwister", 

set ylabel "log(abs. Häufigkeit)"
set logscale y
set output "occ_plot_abs_log_y.png"
plot "acres_occ" using 1:2 with linespoint lt 1 lw 1 title "acres", "lili_occ" using 1:2 with linespoint lt 2 lw 1 title "liliom", "jeder_occ" using 1:2 with linespoint lt 3 lw 1 title "jeder", "geschw_occ" using 1:2 with linespoint lt 4 lw 1 title "geschw", 

set ylabel "log(rel. Häufigkeit)"
set output "occ_plot_rel_log_y.png"
plot "acres" using 1:3 with linespoint lt 1 lw 1 title "acres", "lili" using 1:3 with linespoint lt 2 lw 1 title "liliom", "jeder" using 1:3 with linespoint lt 3 lw 1 title "jedermann", "geschw" using 1:3 with linespoint lt 4 lw 1 title "geschwister", 

set xlabel "log(Rang)"
set ylabel "log(abs. Häufigkeit)"
set logscale yx
set output "occ_plot_abs_log_yx.png"
plot "acres_occ" using 1:2 with linespoint lt 1 lw 1 title "acres", "lili_occ" using 1:2 with linespoint lt 2 lw 1 title "liliom", "jeder_occ" using 1:2 with linespoint lt 3 lw 1 title "jeder", "geschw_occ" using 1:2 with linespoint lt 4 lw 1 title "geschw", 

set ylabel "log(rel. Häufigkeit)"
set output "occ_plot_rel_log_xy.png"
plot "acres" using 1:3 with linespoint lt 1 lw 1 title "acres", "lili" using 1:3 with linespoint lt 2 lw 1 title "liliom", "jeder" using 1:3 with linespoint lt 3 lw 1 title "jedermann", "geschw" using 1:3 with linespoint lt 4 lw 1 title "geschwister", 
